{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@types": ["src/types"],
      "@mocks": ["src/mocks"],
    }
  }
}
