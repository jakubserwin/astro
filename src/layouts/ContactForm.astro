---
import { Icon } from 'astro-icon'
---

<div class='container mx-auto px-8'>
  <div class='mt-28 flex flex-col items-center 2xl:mt-48'>
    <h2 class='mb-16 text-3xl text-neutral-800 dark:text-white'>
      Skontaktuj się ze mną
    </h2>
    <form
      action='https://formsubmit.co/kuba.serwin99@gmail.com'
      method='POST'
      class='flex w-full flex-col gap-4 lg:max-w-2xl'
    >
      <input type='hidden' name='_subject' value='Email from portfolio' />
      <input type='hidden' name='_template' value='table' />
      <input type='hidden' name='_captcha' value='false' />
      <div class='flex flex-col gap-4 lg:flex-row'>
        <div class='flex flex-1 flex-col gap-1'>
          <label
            for='name'
            class='block font-medium text-gray-700 dark:text-gray-300'
          >
            Imię
          </label>
          <input
            type='text'
            name='name'
            id='name'
            class='rounded-md border border-gray-300 p-2 text-neutral-800 focus:border-indigo-500'
            required
          />
        </div>
        <div class='flex flex-1 flex-col gap-1'>
          <label
            for='email'
            class='block font-medium text-gray-700 dark:text-gray-300'
          >
            Adres e-mail
          </label>
          <input
            type='email'
            name='email'
            id='email'
            class='rounded-md border border-gray-300 p-2 text-neutral-800 focus:border-indigo-500'
            required
          />
        </div>
      </div>
      <div class='flex flex-col gap-1'>
        <label
          for='message'
          class='block font-medium text-gray-700 dark:text-gray-300'
          >
            Wiadomość
          </label>
        <textarea
          rows='5'
          cols='33'
          name='message'
          id='message'
          class='resize-none rounded-md border border-gray-300 p-2 text-neutral-800 focus:border-indigo-500'
          required
        >
        </textarea>
      </div>
      <input
        type='submit'
        value='Wyślij'
        class='bg-slide cursor-pointer rounded-md py-2 font-medium text-white'
      />
    </form>
    <div class='mt-12 flex gap-4'>
      <a href='https://github.com/jakubserwin' target='_blank'>
        <Icon
          name='logo-github'
          class='h-9 w-9 fill-neutral-800 duration-300 hover:fill-neutral-900 dark:fill-gray-300'
        />
      </a>
      <a
        href='https://www.linkedin.com/in/jakub-serwin-4a1539210/'
        target='_blank'
      >
        <Icon
          name='linkedin'
          class='h-9 w-9 fill-neutral-800 duration-300 hover:fill-neutral-900 dark:fill-gray-300'
        />
      </a>
    </div>
  </div>
</div>

<style>
  .bg-slide {
    background: linear-gradient(to right, #06bfff 50%, #2b74ff 100%) right 0 /
      200%;
    transition: background-position 300ms ease-in;
  }

  .bg-slide:hover {
    background-position: left 0;
  }
</style>
