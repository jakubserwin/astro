---
import type { StaticPath } from '@types'
import { LanguageSelector } from 'astro-i18next/components'
import i18next, { changeLanguage, t } from 'i18next'

changeLanguage('en')

export const getStaticPaths = (): StaticPath[] => [
  { params: { showcase: 'clifford' } },
  { params: { showcase: 'rover' } },
  { params: { showcase: 'spot' } },
]
const { showcase } = Astro.params
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{i18next.language}</title>
  </head>
  <body>
    {i18next.language}
    <LanguageSelector showFlag={true} class='languages' />
    <div>{t('hello')}, {showcase}!</div>
  </body>
</html>

<style>
  .languages {
    border: 2px solid var(--color-border);
    margin-top: 2rem;
    appearance: none;
    background-color: white;
    border-radius: 0.25rem;
    padding: 0.4em 0.6em;
    font-family: system-ui, sans-serif;
    font-size: var(--font-size-base);
  }
</style>
