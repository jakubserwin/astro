---
import ThemeSwitchComponent from './ThemeSwitchComponent.astro'

export interface Props {
  isDarkMode?: boolean;
}

const { isDarkMode } = Astro.props
---
<header class={`flex items-center justify-between py-4 ${isDarkMode ? 'text-neutral-800 dark:text-white' : 'text-white'}`}>
  <a class='text-xl font-medium' href="/">Jakub Serwin</a>
  <div class='flex items-center gap-6'>
    <nav class='hidden lg:block'>
      <ul class='flex gap-4'>
        <li>
          <a class='cursor-pointer' href="/" >Strona Główna</a>
        </li>
        <li>
          <a class='cursor-pointer' href="#services">Usługi</a>
        </li>
        <li>
          <a class='cursor-pointer' href="#projects">Projekty</a>
        </li>
        <li>
          <a class='cursor-pointer' href="#contact">Kontakt</a>
        </li>
      </ul>
    </nav>
    <ThemeSwitchComponent />
  </div>
</header>
